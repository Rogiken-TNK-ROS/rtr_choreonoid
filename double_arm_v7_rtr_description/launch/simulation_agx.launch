<launch>
  <arg name="model" default="$(find double_arm_v7_rtr_description)/urdf/DoubleArmV7A_RTR.urdf.xacro"/>
  <arg name="gui" default="True" />
  <arg name="rviz_config" default="$(find double_arm_v7_rtr_description)/launch/config/wrs.rviz"/>
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(arg model)'"/>
  <param name="use_gui" value="$(arg gui)"/>
  <param name="use_sim_time" value="true"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
    <remap from="joint_states" to="/DoubleArmV7_RTR/joint_states"/>
  </node>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)"/>

  <include file="$(find double_arm_v7_rtr_control)/launch/control_agx.launch"/>
</launch>
